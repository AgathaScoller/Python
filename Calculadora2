import math

def soma(a, b):
    return a + b

def subtracao(a, b):
    return a - b

def multiplicacao(a, b):
    return a * b

def divisao(a, b):
    if b != 0:
        return a / b
    else:
        return "Erro: Divisão por zero!"

def potenciacao(a, b):
    return a ** b

def raiz(a):
    if a >= 0:
        return math.sqrt(a)
    else:
        return "Erro: Número negativo não tem raiz quadrada real!"

def fatorial(a):
    if a >= 0 and int(a) == a:
        return math.factorial(int(a))
    else:
        return "Erro: Fatorial só é válido para números inteiros não-negativos!"

def area_quadrado(lado):
    return lado ** 2

def area_retangulo(base, altura):
    return base * altura

def area_triangulo(base, altura):
    return (base * altura) / 2

def area_circulo(raio):
    return math.pi * (raio ** 2)

def menu():
    print("\n=== Calculadora da Agathinha ===")
    print("1 - Soma")
    print("2 - Subtração")
    print("3 - Multiplicação")
    print("4 - Divisão")
    print("5 - Potência")
    print("6 - Raiz quadrada")
    print("7 - Fatorial")
    print("8 - Área do quadrado")
    print("9 - Área do retângulo")
    print("10 - Área do triângulo")
    print("11 - Área do círculo")
    print("0 - Sair")

while True:
    menu()
    escolha = input("Qual função você quer? ")

    if escolha == "0":
        print("Até logo!")
        break

    elif escolha == "1":
        a = float(input("Digite o primeiro número: "))
        b = float(input("Digite o segundo número: "))
        print("Resultado:", soma(a, b))

    elif escolha == "2":
        a = float(input("Digite o primeiro número: "))
        b = float(input("Digite o segundo número: "))
        print("Resultado:", subtracao(a, b))

    elif escolha == "3":
        a = float(input("Digite o primeiro número: "))
        b = float(input("Digite o segundo número: "))
        print("Resultado:", multiplicacao(a, b))

    elif escolha == "4":
        a = float(input("Digite o dividendo: "))
        b = float(input("Digite o divisor: "))
        print("Resultado:", divisao(a, b))

    elif escolha == "5":
        a = float(input("Digite a base: "))
        b = float(input("Digite o expoente: "))
        print("Resultado:", potenciacao(a, b))

    elif escolha == "6":
        a = float(input("Digite o número: "))
        print("Resultado:", raiz(a))

    elif escolha == "7":
        a = float(input("Digite um número inteiro não-negativo: "))
        print("Resultado:", fatorial(a))

    elif escolha == "8":
        lado = float(input("Digite o lado do quadrado: "))
        print("Área do quadrado:", area_quadrado(lado))

    elif escolha == "9":
        base = float(input("Digite a base do retângulo: "))
        altura = float(input("Digite a altura do retângulo: "))
        print("Área do retângulo:", area_retangulo(base, altura))

    elif escolha == "10":
        base = float(input("Digite a base do triângulo: "))
        altura = float(input("Digite a altura do triângulo: "))
        print("Área do triângulo:", area_triangulo(base, altura))

    elif escolha == "11":
        raio = float(input("Digite o raio do círculo: "))
        print("Área do círculo:", area_circulo(raio))

    else:
        print("Opção inválida! Tente novamente.")